{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}